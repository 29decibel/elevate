{
	"name": "StravistixDevWrapper",
	"version": "1.0.0",
	"description": "Wrap the needed tools required to cook the StravistiX Web Plugin",
	"scripts": {
		"package": "npm run clean:jsmap && node ./node_modules/gulp/bin/gulp.js package",
		"build": "npm run clean:jsmap && node ./node_modules/gulp/bin/gulp.js build",
		"build:webapp": "cd ./plugin/webapp/ && node ./node_modules/@angular/cli/bin/ng --version && node ./node_modules/@angular/cli/bin/ng build",
		"postinstall": "cd ./plugin/ && npm install && cd ./webapp/ && npm install",
		"package:preview": "npm run clean:jsmap && node ./node_modules/gulp/bin/gulp.js package --preview",
		"dev": "node ./node_modules/concurrently/src/main.js --kill-others --names \"core,webapp\" \"npm run dev:core\" \"npm run dev:webapp\"",
		"dev:core": "npm run clean:jsmap && npm run tsc:watch",
		"dev:webapp": "npm run clean:webapp-dist && npm run tsc:compile && npm run build:webapp -- --watch",
		"tsc:version": "echo TypeScript: && node ./node_modules/typescript/bin/tsc --version",
		"tsc:compile": "npm run tsc:version && node ./node_modules/typescript/bin/tsc",
		"tsc:watch": "npm run tsc:version && node ./node_modules/typescript/bin/tsc --watch",
		"test": "node ./node_modules/karma/bin/karma start karma.conf.js --single-run",
		"test:webapp": "cd ./plugin/webapp/ && node ./node_modules/@angular/cli/bin/ng test",
		"test:core:phantom": "npm run tsc:compile && node ./node_modules/karma/bin/karma start karma.conf.js --single-run --browserConsoleLogOptions.terminal",
		"test:core:chrome": "npm run tsc:compile && node ./node_modules/karma/bin/karma start karma.conf.js --no-single-run --browsers Chrome --browserConsoleLogOptions.terminal",
		"pretest": "npm run clean:jsmap && npm run tsc:compile",
		"clean:jsmap": "node ./node_modules/gulp/bin/gulp.js cleanInlineSources",
		"clean:root-dist": "node ./node_modules/rimraf/bin.js ./dist/",
		"clean:webapp-dist": "node ./node_modules/rimraf/bin.js ./plugin/webapp/dist/",
		"clean:package": "node ./node_modules/rimraf/bin.js ./package/",
		"clean:node-modules": "node ./node_modules/rimraf/bin.js ./node_modules/ ./plugin/node_modules/ ./plugin/webapp/node_modules/",
		"clean": "npm run clean:jsmap && npm run clean:root-dist && npm run clean:webapp-dist && npm run clean:package",
		"wipe": "npm run clean && npm run clean:node-modules"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/thomaschampagne/stravistix"
	},
	"author": {
		"name": "Thomas Champagne",
		"email": "th.champagne@gmail.com",
		"web": "http://thomaschampagne.github.io"
	},
	"contributors": [
		{
			"name": "Thomas Champagne",
			"email": "th.champagne@gmail.com",
			"web": "http://thomaschampagne.github.io"
		}
	],
	"license": "MIT",
	"readme": "README.md",
	"devDependencies": {
		"@types/angular": "^1.6.38",
		"@types/angular-material": "^1.1.55",
		"@types/chart.js": "^2.6.11",
		"@types/chrome": "0.0.47",
		"@types/d3": "^3.5.38",
		"@types/file-saver": "0.0.1",
		"@types/filesystem": "0.0.28",
		"@types/filewriter": "0.0.28",
		"@types/googlemaps": "^3.29.2",
		"@types/jasmine": "^2.6.2",
		"@types/jquery": "^3.2.16",
		"@types/lodash": "^4.14.81",
		"@types/nvd3": "^1.8.37",
		"@types/q": "^1.0.6",
		"@types/qrcode": "^0.8.0",
		"@types/systemjs": "^0.20.6",
		"concurrently": "^3.5.0",
		"gulp": "^3.9.1",
		"gulp-clean": "^0.3.2",
		"gulp-concat": "^2.6.1",
		"gulp-git": "^2.4.2",
		"gulp-if": "^2.0.2",
		"gulp-json-editor": "^2.2.1",
		"gulp-load-plugins": "^1.5.0",
		"gulp-options": "^1.1.1",
		"gulp-typescript": "^3.2.3",
		"gulp-util": "^3.0.8",
		"gulp-zip": "^3.2.0",
		"jasmine": "^2.6.0",
		"karma": "^1.7.0",
		"karma-chrome-launcher": "^1.0.1",
		"karma-coverage": "^1.1.1",
		"karma-jasmine": "^1.1.0",
		"karma-json-fixtures-preprocessor": "0.0.6",
		"karma-opera-launcher": "^1.0.0",
		"karma-phantomjs-launcher": "^1.0.4",
		"karma-promise": "^0.1.0",
		"karma-systemjs": "^0.16.0",
		"karma-typescript": "^2.1.7",
		"lodash": "^4.17.4",
		"rimraf": "^2.6.2",
		"run-sequence": "^1.2.2",
		"systemjs": "^0.19.0",
		"systemjs-plugin-babel": "0.0.25",
		"traceur": "0.0.111",
		"typescript": "~2.4.2"
	}
}
